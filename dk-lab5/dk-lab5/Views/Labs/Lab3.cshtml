@model Lab3DataModel

@{
	ViewData["Title"] = "Lab3";
}

<h1>@ViewData["Title"]</h1>
<text> &nbsp; &nbsp; &nbsp;</text>
<h2>Find how many reactions it will take to transmutate one element into another</h2>

<text> &nbsp; &nbsp; &nbsp;</text>

<form method="post" enctype="multipart/form-data" asp-controller="Labs" asp-action="Lab3">
	<div class="form-group">
		<label for="psize">First line</label>
		<input type="text" class="form-control" id="amountOfVIPs" asp-for="FirstLine">
	</div>
	<div class="form-group">
		<label for="pdata">Second line</label>
		<input type="text" class="form-control" id="amountOfPairs" asp-for="SecondLine">
	</div>
	<div class="form-group">
		<label for="pdata">Third line</label>
		<input type="text" class="form-control" id="lineOfPairs" asp-for="ThirdLine">
	</div>
	<div class="form-group">
		<label for="pdata">Start element</label>
		<input type="text" class="form-control" id="lineOfPairs" asp-for="StartElement">
	</div>
	<div class="form-group">
		<label for="pdata">Last element</label>
		<input type="text" class="form-control" id="lineOfPairs" asp-for="FinishElement">
	</div>
	<button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

<text> &nbsp; &nbsp; &nbsp;</text>
<text> &nbsp; &nbsp; &nbsp;</text>

@if (Model != null)
{
	<div class="container mt5">
		<div class="form-group">
			<h2 class="control-label">Result: @(Model != null ? Model.Calculated : string.Empty)</h2>
		</div>
		@if (Model != null && !string.IsNullOrEmpty(Model.ErrorValue))
		{
			<div class="row">
				<label for="perror"></label>
				<input type="text" id="perror" value="@Model.ErrorValue">
			</div>
		}
	</div>
}